# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Database
# Use MySQL for full requirement
DB_ENGINE=mysql
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=veinline
MYSQL_USER=root
MYSQL_PASSWORD=your_password

# (Optional) quick local fallback
# DB_ENGINE=sqlite

# JWT
JWT_ACCESS_MINUTES=30
JWT_REFRESH_DAYS=7

# CORS (only needed if frontend is hosted elsewhere)
CORS_ALLOWED_ORIGINS=

# SMS
SMS_PROVIDER=fast2sms   # fast2sms | textlocal
SMS_API_KEY=            # put your real key here
SMS_SENDER=VEINLN
CITY_MATCH_STRICT=1

# Email (fallback notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=VeinLine <no-reply@veinline.local>

# Google OAuth (for social login)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret_here


